{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}
	<div class="home">
		<div class="card card-fill">
			<div class="card-body">
				<div class="my-8 mx-auto w-100">
					<h1 class="text-center mb-4 fs-4">S'inscrire</h1>

					<!-- Display form errors -->
					{{ form_errors(registrationForm) }}

					{{ form_start(registrationForm) }}

					<div class="row">
						<div
							class="col-md-6">
							<!-- Email, Firstname, Lastname fields -->
							{{ form_row(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
							{{ form_row(registrationForm.firstname, {'attr': {'class': 'form-control'}}) }}
							{{ form_row(registrationForm.lastname, {'attr': {'class': 'form-control'}}) }}
							{{ form_row(registrationForm.plainPassword, {
                                'attr': {
                                    'class': 'form-control',
                                    'placeholder': 'Mot de passe'
                                }
                            }) }}
						</div>

						<div class="col-md-6">
							<!-- Password field with Bootstrap styling -->


							<!-- Address fields -->
							{{ form_row(registrationForm.address, {'attr': {'class': 'form-control'}}
							) }}

								<div class="row"> {{ form_row(registrationForm.postalCode, {'attr': {'class': 'form-control'}}) }}
							</div>
							{{ form_row(registrationForm.city, {'attr': {'class': 'form-control'}}) }}
							<!-- Phone number -->
							{{ form_row(registrationForm.phone, {'attr': {'class': 'form-control'}}) }}

						</div>


					</div>
				</div>

				<!-- Terms and conditions agreement -->
				<div class="text-center mt-4">
					<span class="text-muted d-flex align-items-center">
						<div class="form-check">
							{{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
							<label class="form-check-label">
								En m'inscrivant à ce site, j'accepte les
								<a href="{{ path('homepage') }}">conditions générales d'utilisation</a>
							</label>
						</div>

					</span>
				</div>


				<!-- Submit button -->
				<div class="text-center mt-4">
					<button type="submit" class="btn btn-md btn-dark">
						<span>S'enregistrer</span>
					</button>
					<input type="hidden" name="_csrf_token" value="{{ csrf_token('registration') }}">

				</div>

				{{ form_end(registrationForm) }}
			</div>
		</div>
	</div>
</div></div>{% endblock %}
