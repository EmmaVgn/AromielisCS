{% block title %}Connexion | Aromielis
{% endblock %}

{% block body %}
	<style>
		/* Assure une structure compl√®te avec le header en haut et le footer en bas */
		body {
			background: linear-gradient(135deg, #F5F5DC, #E8E4C9); /* D√©grad√© beige */
			display: flex;
			flex-direction: column;
			min-height: 100vh;
			font-family: 'Josefin Slab', serif;
			margin: 0;
		}

		/* Conteneur principal pour centrer le formulaire */
		.container-login {
			flex: 1;
			display: flex;
			justify-content: center;
			align-items: center;
		}

		/* Carte de connexion */
		.login-card {
			background: #fff;
			border-radius: 12px;
			box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
			width: 400px;
			padding: 30px;
			text-align: center;
		}

		.login-logo {
			font-size: 32px;
			font-weight: bold;
			margin-bottom: 10px;
		}

		.login-subtitle {
			font-size: 14px;
			color: #555;
			margin-bottom: 20px;
		}

		/* Champ de formulaire */
		.form-label {
			font-weight: bold;
			text-align: left;
			display: block;
			margin-bottom: 5px;
		}

		.form-control {
			border-radius: 8px;
			border: 1px solid #ccc;
			padding: 10px;
			width: 100%;
		}

		/* Bouton de connexion */
		.btn-login {
			background: #A68B5B;
			color: white;
			border: none;
			padding: 12px;
			width: 100%;
			border-radius: 8px;
			font-weight: bold;
			cursor: pointer;
			transition: 0.3s ease-in-out;
		}

		.btn-login:hover {
			background: #8F774A;
		}

		.forgot-password {
			display: block;
			margin-top: 10px;
			font-size: 14px;
			color: #8F774A;
			text-decoration: none;
		}

		.remember-me {
			display: flex;
			align-items: center;
			justify-content: start;
			font-size: 14px;
		}

		.remember-me input {
			margin-right: 8px;
		}
	</style>


	<!-- FORMULAIRE DE CONNEXION -->
	<div class="container-login">
		<div class="login-card">
			<div class="login-logo">
				<img src="{{ asset('images/Logo.png') }}" alt="Logo Aromielis" width="60">
				<h2>üêù Aromielis</h2>
			</div>
			<div class="login-subtitle">Ravi de vous revoir chez Aromielis</div>

			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			<form method="post">
				<div class="mb-3">
					<label for="username" class="form-label">Adresse e-mail</label>
					<input type="email" name="_username" id="username" class="form-control" autocomplete="email" required placeholder="votreemail@example.com">
				</div>

				<div class="mb-3">
					<label for="password" class="form-label">Mot de passe</label>
					<input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢">
				</div>

				<div class="remember-me">
					<input type="checkbox" name="_remember_me" id="remember_me">
					<label for="remember_me">Se souvenir de moi</label>
				</div>

				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				<button class="btn-login" type="submit">Se connecter</button>

				<a href="{{ path('security_forgotPw') }}" class="forgot-password">Mot de passe oubli√© ?</a>
			</form>
		</div>
	</div>

	<!-- FOOTER -->
	<footer>
		<p>¬© 2024 Aromielis - Apicultrice en Lot-et-Garonne (47) |
			<a href="{{ path('mentions_legales') }}">Mentions l√©gales</a>
		</p>
	</footer>
{% endblock %}
