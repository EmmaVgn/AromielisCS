<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}
				Aromielis
			{% endblock %}
		</title>
		<link rel="icon" type="image/png" href="{{ asset('images/favicon.png') }}">

		{% block stylesheets %}
			<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

		{% endblock %}

		{% block javascripts %}
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
		{% endblock %}
	</head>
	<body>
		<header>
			{% include "shared/_navbar.html.twig" %}
		</header>


		{% include "shared/_flash.html.twig" %}
		{% set margin = '' %}
		{% if carousel is defined %}
			{% include "shared/_carousel.html.twig" %}
		{% else %}
			{% set margin = 'mt-5' %}
		{% endif %}
		<div class="container marketing {{ margin }}"> {% block body %}{% endblock %}
			</div>


			{% include "shared/_footer.html.twig" %}
		</body>
	</html>
