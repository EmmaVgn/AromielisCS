<form id="filterForm" class="filter js-filter-form">
	<div class="spinner-border js-loading" role="status" aria-hidden="true" style="display: none;">
		<span class="visually-hidden">Loading...</span>
	</div>
	<div class="box border-top border-bottom ps-1">
		<div class="box-label text-uppercase d-flex align-items-center justify-content-between">
			Filtres
			<button type="button" class="btn-link" id="resetBtn">Tout effacer</button>
		</div>
	</div>
	<div class="box border-bottom ps-1">
		<div class="box-label text-uppercase d-flex align-items-center pt-3">
			<label for="searchInput">Recherche</label>
			<input type="text" id="searchInput" name="q" placeholder="Rechercher...">
		</div>
	</div>
	<div class="box border-top border-bottom ps-1">
		<div class="box-label text-uppercase d-flex align-items-center">
			Catégories
		</div>
		<div class="mt-2 ps-2">
			<input type="checkbox" name="category[]" value="1">
			Catégorie 1<br>
			<input type="checkbox" name="category[]" value="2">
			Catégorie 2<br>
			<input type="checkbox" name="category[]" value="3">
			Catégorie 3<br>
		</div>
	</div>
	<div class="box border-bottom ps-1 pb-3">
		<div class="box-label text-uppercase d-flex align-items-center">
			Prix
		</div>
		<div class="d-flex">
			<input type="number" name="minPrice" placeholder="Prix min"/>
			<input type="number" name="maxPrice" placeholder="Prix max"/>
		</div>
	</div>
	<button class="btn btn-filter w-100 mt-3" type="submit">Filtrer</button>
</form>
<script>
	document.addEventListener('DOMContentLoaded', function () {
const resetButton = document.getElementById('resetBtn');
const form = document.getElementById('filterForm');

// Fonction pour réinitialiser le formulaire
function resetForm() {
console.log('Réinitialisation du formulaire appelée');

// Réinitialiser les champs de texte
const searchInput = form.querySelector('#searchInput');
if (searchInput) 
searchInput.value = '';

// Effacer le champ de recherche

// Réinitialiser les cases à cocher des catégories
const checkboxes = form.querySelectorAll('input[type="checkbox"]');
checkboxes.forEach(checkbox => {
checkbox.checked = false; // Décocher toutes les cases à cocher
});

// Réinitialiser les champs de prix
const minPriceInput = form.querySelector('input[name="minPrice"]');
const maxPriceInput = form.querySelector('input[name="maxPrice"]');
if (minPriceInput) 
minPriceInput.value = '';
 // Effacer le prix minimum
if (maxPriceInput) 
maxPriceInput.value = '';

// Effacer le prix maximum

// Si vous utilisez un slider de prix, vous pouvez le réinitialiser ici également
const priceSlider = document.getElementById('price-slider');
if (priceSlider) { // Réinitialiser les valeurs du slider à leur valeur minimale et maximale par défaut
const min = priceSlider.dataset.min;
const max = priceSlider.dataset.max;
$(priceSlider).slider('values', [min, max]); // Réinitialiser le slider avec jQuery (si vous l'utilisez)
}

// Optionnel : Recharger les produits ou mettre à jour l'interface
loadAllProducts(); // Appel à la fonction pour recharger les produits sans les filtres
}

// Ajouter l'événement au bouton "Tout effacer"
if (resetButton) {
resetButton.addEventListener('click', function (e) {
e.preventDefault(); // Empêcher le formulaire de se soumettre
resetForm(); // Appeler la fonction de réinitialisation
});
}

// Exemple de fonction pour recharger les produits sans les filtres
function loadAllProducts() {
console.log('Recharger tous les produits sans filtre');
// Code pour recharger les produits ou mettre à jour l'interface ici
}
});
</script>
